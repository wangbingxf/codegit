.table {
    border: solid 2px #dadada;
    margin: 0 10px;
    margin-top: 0;
}

.table .th {
    float: left;
    background: #e0e0e0;
    line-height: 40px;
    text-align: center;
    border-right: solid 2px #dadada;
    width: calc((100% - 4px) / 3);
}

.table .th:nth-of-type(3) {
    border-right: 0;
}

.table .td {
    float: left;
    line-height: 40px;
    border-right: solid 2px #dadada;
    border-top: solid 2px #dadada;
    width: calc((100% - 4px) / 3);
    text-align: center;
    font-size: 16px;
}

.table .td:nth-of-type(3) {
    border-right: 0;
}

.clear {
    clear: both;
}